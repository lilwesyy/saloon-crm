{
  "name": "estetica-crm-backend",
  "version": "1.0.0",
  "description": "Backend per CRM centro estetico",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "cross-env NODE_ENV=test jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "cross-env NODE_ENV=test jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:e2e": "cross-env NODE_ENV=test jest --testMatch='**/tests/e2e/**/*.test.js'",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "create-admin": "node scripts/create-admin.js",
    "seed-clienti": "node scripts/seed-clienti.js",
    "seed-servizi": "node scripts/seed-servizi.js",
    "seed-operatori": "node scripts/seed-operatori.js",
    "seed-appuntamenti": "node scripts/seed-appuntamenti.js",
    "seed-all": "node scripts/create-admin.js && node scripts/seed-clienti.js && node scripts/seed-servizi.js && node scripts/seed-operatori.js && node scripts/seed-appuntamenti.js",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.13.0",
    "node-mocks-http": "^1.12.2",
    "cross-env": "^7.0.3",
    "jest-extended": "^3.2.4"
  }
}
