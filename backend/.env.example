# Database
MONGO_URI=mongodb://mongodb:27017/esteticacrm

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Business Configuration
BUSINESS_NAME=Centro Estetico Bellezza
BUSINESS_EMAIL=info@centroestetico.it
BUSINESS_PHONE=+39 123 456 7890
BUSINESS_ADDRESS=Via Roma 123, 00100 Roma
BUSINESS_WEBSITE=https://www.centroestetico.it

# Frontend URLs
FRONTEND_URL=http://localhost:8080
PUBLIC_URL=http://localhost:8080

# File Upload
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Scheduler
REMINDER_INTERVAL=15
AUTO_CLEANUP_DAYS=30

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Prenotazione Online
PRENOTAZIONE_TOKEN_EXPIRY=7d
PRENOTAZIONE_REMINDER_HOURS=24,2,0.5
MAX_PRENOTAZIONI_PER_IP=10
MAX_PRENOTAZIONI_PER_EMAIL=5
